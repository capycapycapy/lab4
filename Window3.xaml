<Window x:Class="WPF_work.Window3"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_work"
        mc:Ignorable="d"
        Title="Сумма чисел от 1 до n" Height="200" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="30,20,0,0" VerticalAlignment="Top" Text="Введите число n:"/>
        <TextBox x:Name="txtN" HorizontalAlignment="Left" Height="23" Margin="150,20,0,0" VerticalAlignment="Top" Width="100"/>

        <Button x:Name="CalculateSum" Content="Вычислить сумму" HorizontalAlignment="Left" Margin="75,60,0,0" VerticalAlignment="Top" Width="150" Click="CalculateSum_Click"/>

        <TextBlock x:Name="txtResult" HorizontalAlignment="Left" Margin="30,100,0,0" VerticalAlignment="Top" Height="50" Width="240" TextWrapping="Wrap"/>
    </Grid>
</Window>
